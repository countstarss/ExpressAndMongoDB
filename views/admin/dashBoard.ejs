<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="button">Add New Post</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>" class="post-title">
                <%= post.title %> &nearr;
            </a>


            <div class="admin-post-controls">
                <i><%= post.createdAt.toDateString() %></i>
                <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>

                <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-delete">
                </form>
            </div>

        </li>
    <% }) %>


    <% if (nextPage) { %>
        <a href="?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    <% if (!nextPage) { %>
        
        <a class="pagination"><b onclick="goBack()">&lt; Go Back</b></a>
    <% } %>
</ul>